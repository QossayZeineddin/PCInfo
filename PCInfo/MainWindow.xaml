<Window x:Class="PCInfo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PCInfo"
        mc:Ignorable="d"
        Title="PC Info by " Height="470" Width="600" ResizeMode="NoResize">
    <Grid>
        <Label Name="titleLabel" HorizontalAlignment="Center" VerticalAlignment="Top" Height="30" Width="500" Background="#FFdddddd" HorizontalContentAlignment="Center" FontFamily="Arial Black" FontSize="16"/>
        <TextBox Name="details" Height="400" Width="600" IsReadOnly="True" VerticalAlignment="Bottom"></TextBox>
    </Grid>
</Window>
